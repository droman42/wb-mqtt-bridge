{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Сценарии AV Системы",
  "options": {
    "disable_edit_json": true,
    "disable_collapse": true,
    "disable_properties": true
  },
  "configFile": {
    "path": "/mnt/data/etc/wb-mqtt-avscenario.conf",
    "service": "wb-rules"
  },
  "properties": {
    "avscenario": {
      "type": "array",
      "title": " ",
      "items": {
        "type": "object",
        "headerTemplate": "{{self.name}}",
        "title": "Group",
        "options": {
          "disable_properties": true,
          "disable_edit_json": true,
          "compact": true,
          "disable_collapse": true
        },
        "_format": "grid",
        "properties": {
          "name": {
            "type": "string",
            "propertyOrder": 1,
            "options": {
              "hidden": true
            }
          },
          "type": {
            "type": "string",
            "propertyOrder": 2,
            "options": {
              "hidden": true
            }
          },
          "alias": {
            "type": "string",
            "propertyOrder": 3,
            "options": {
              "hidden": true
            }
          },
          "info": {
            "type": "string",
            "propertyOrder": 4,
            "title": "Дополнительная информация",
            "maxLength": 60,
            "options": {
              "hidden": false,
	      "grid_columns": 12
            }
          },
          "startup": {
            "propertyOrder": 5,
            "type": "string",
            "title": "Запуск сценария",
            "options": {
              "hidden": false,
	      "grid_columns": 12
            }
          },
          "shutdown": {
            "propertyOrder": 7,
            "type": "string",
            "title": "Окончание сценария",
            "options": {
              "hidden": false,
	      "grid_columns": 12
            }
          },
          "scenario": {
            "type": "array",
            "_format": "table",
            "title": "СЦЕНАРИИ",
            "propertyOrder": 6,
            "items": {
              "$ref": "#/definitions/scenario"
            },
            "options": {
              "disable_array_reorder": false,
              "disable_array_delete_last_row": true,
              "disable_array_delete_all_rows": true,
              "compact": true,
              "grid_columns": 12
            }
          }
        }
      },
      "options": {
        "disable_array_reorder": true,
        "disable_array_delete_last_row": true,
        "disable_array_delete_all_rows": true,
        "disable_collapse": true,
        "disable_array_add": true,
        "disable_array_delete": true
      },
      "_format": "tabs"
    }
  },
  "definitions": {
    "scenario": {
      "type": "object",
      "headerTemplate": "{{self.button}}",
      "_format": "grid",
      "options": {
        "disable_edit_json": true,
        "disable_array_add": false,
        "disable_properties": true,
        "collapsed": true
      },
      "properties": {
        "button": {
          "type": "string",
          "title": "Функция сценария",
          "propertyOrder": 1,
          "enum": [
            "Power On",
            "Power Off",
            "Power Toggle",
            "Play",
            "Stop",
            "Pause",
            "Fast Forward/Chapter+",
            "Rewind/Chapter-",
            "Inputs",
            "Options",
            "Home",
            "Volume+",
            "Volume-",
            "Up",
            "Down",
            "Left",
            "Right",
            "OK/Enter",
            "Back",
            "Audio",
            "Subtitles",
            "Mute",
            "Mode",
            "Special"
          ]
        },
        "device": {
          "type": "string",
          "maxLength": 25,
          "propertyOrder": 2,
          "title": "Устройство"
        },
        "function": {
          "type": "string",
          "maxLength": 25,
          "propertyOrder": 3,
          "title": "Функция устройства"
        },
        "text": {
          "type": "string",
          "title": "Название",
          "maxLength": 10,
          "propertyOrder": 4
        }
      },
      "required": [
        "button",
        "device",
        "function",
        "text"
      ]
    }
  }
}