{
  "alias": "processor",
  "device_id": "processor",
  "device_name": "eMotiva XMC2 Processor",
  "mqtt_progress_topic": "/devices/processor/controls/progress",
  "device_class": "EmotivaXMC2",
  "config_class": "EmotivaXMC2DeviceConfig",
  "emotiva": {
    "host": "192.168.110.177",
    "mac": "E8:EB:1B:18:8F:3E",
    "port": 7002,
    "update_interval": 60
  },
  "commands": {
    "power_on": {
      "action": "power_on",
      "topic": "/devices/processor/controls/power_on",
      "group": "power",
      "description": "Turn on the processor"
    },
    "power_off": {
      "action": "power_off",
      "topic": "/devices/processor/controls/power_off",
      "group": "power",
      "description": "Turn off the processor"
    },
    "zone2_on": {
      "action": "zone2_on",
      "topic": "/devices/processor/controls/zone2_on",
      "group": "power",
      "description": "Turn on zone 2"
    },
    "zappiti": {
      "action": "zappiti",
      "topic": "/devices/processor/controls/zappiti",
      "group": "inputs",
      "description": "Switch to Zappiti"
    },
    "apple_tv": {
      "action": "apple_tv",
      "topic": "/devices/processor/controls/apple_tv",
      "group": "inputs",
      "description": "Switch to Apple TV"
    },
    "dvdo": {
      "action": "dvdo",
      "topic": "/devices/processor/controls/dvdo",
      "group": "inputs",
      "description": "Switch to DVDO"
    },
    "set_volume": {
      "action": "set_volume",
      "topic": "/devices/processor/controls/volume",
      "group": "volume",
      "description": "Set the volume level",
      "params": [
        {
          "name": "level",
          "type": "range",
          "min": -96.0,
          "max": 0.0,
          "required": true,
          "description": "Volume level in dB (-96.0 to 0.0)"
        }
      ]
    },
    "set_mute": {
      "action": "set_mute",
      "topic": "/devices/processor/controls/mute",
      "group": "volume",
      "description": "Set the mute state",
      "params": [
        {
          "name": "state",
          "type": "boolean",
          "required": true,
          "description": "Mute state (true/false)"
        }
      ]
    }
  }
}