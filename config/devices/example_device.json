{
  "device_name": "example_device",
  "device_type": "example",
  "mqtt_topics": [
    "home/example/status",
    "home/example/command"
  ],
  "auth": {
    "username": "device_user",
    "password": "device_password"
  },
  "parameters": {
    "update_interval": 60,
    "threshold": 25.5
  },
  "commands": {
    "power_on": {
      "action": "power_on",
      "topic": "home/example/command/power",
      "description": "Turn the device on"
    },
    "power_off": {
      "action": "power_off",
      "topic": "home/example/command/power",
      "description": "Turn the device off"
    },
    "get_data": {
      "action": "getData",
      "topic": "home/example/command/getData",
      "description": "Get device data"
    }
  }
}