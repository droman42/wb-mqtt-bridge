{
  "device_name": "Auralic Altair G1",
  "device_id": "streamer",
  "alias": "streamer",

  "device_class": "AuralicDevice",
  "config_class": "AuralicDeviceConfig",
  "auralic": {
    "ip_address": "192.168.110.16",
    "update_interval": 15,
    "discovery_mode": true,
    "device_url": "http://192.168.110.16:47216/lightningRender-bc-34-00-a0-67-ba/Upnp/device.xml",
    "ir_power_on_topic": "/devices/wb-msw-v3_207/controls/Play from ROM62/on",
    "ir_power_off_topic": "/devices/wb-msw-v3_207/controls/Play from ROM62/on",
    "device_boot_time": 20
  },
  "commands": {
    "power_on": {
      "action": "power_on",
      "group": "power",
      "description": "Power On"
    },
    "power_off": {
      "action": "power_off",
      "group": "power",
      "description": "Power Off",
      "params": [
        {
          "name": "standby_only",
          "type": "boolean",
          "required": false,
          "default": false,
          "description": "If true, only put the device in standby mode instead of true power off"
        }
      ]
    },
    "play": {
      "action": "play",
      "group": "playback",
      "description": "Play"
    },
    "pause": {
      "action": "pause",
      "group": "playback",
      "description": "Pause"
    },
    "stop": {
      "action": "stop",
      "group": "playback",
      "description": "Stop"
    },
    "next": {
      "action": "next",
      "group": "playback",
      "description": "Next Track"
    },
    "set_volume": {
      "action": "set_volume",
      "group": "volume",
      "description": "Set Volume",
      "params": [
        {
          "name": "volume",
          "type": "range",
          "min": 0,
          "max": 100,
          "required": true,
          "description": "Volume level (0-100)"
        }
      ]
    },
    "volume_up": {
      "action": "volume_up",
      "group": "volume",
      "description": "Increase Volume"
    },
    "volume_down": {
      "action": "volume_down",
      "group": "volume",
      "description": "Decrease Volume"
    },
    "mute": {
      "action": "mute",
      "group": "volume",
      "description": "Toggle Mute"
    },
    "set_input": {
      "action": "set_input",
      "group": "inputs",
      "description": "Set Input",
      "params": [
        {
          "name": "input",
          "type": "string",
          "required": true,
          "description": "Input name or index"
        }
      ]
    },
    "track_info": {
      "action": "track_info",
      "group": "media",
      "description": "Get Current Track Information"
    },
    "get_available_inputs": {
      "action": "get_available_inputs",
      "description": "List available inputs",
      "group": "inputs"
    },
    "refresh_inputs": {
      "action": "refresh_inputs",
      "description": "Refresh inputs list",
      "group": "inputs"
    }
  }
}