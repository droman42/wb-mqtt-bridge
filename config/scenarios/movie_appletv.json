{
    "scenario_id": "movie_appletv",
    "name": "Watch movies on Apple TV",
    "description": "Setup for watching movies with optimal audio and video settings",
    "room_id": "living_room",
    "roles": {
      "volume": "mf_amplifier",
      "playback": "appletv_living",
      "tracks": "appletv_living",
      "menu": "appletv_living",
      "pointer": "appletv_living",
      "apps": "appletv_living",
      "inputs": "processor"
    },
    "devices": [
      "appletv_living",
      "processor",
      "living_room_tv",
      "mf_amplifier"
    ],
    "startup_sequence": [
      {
        "device": "living_room_tv",
        "command": "power_on",
        "params": {},
        "condition": "device.power != 'on'",
        "delay_after_ms": 5000
      },
      {
        "device": "processor",
        "command": "power_on",
        "params": {"zone": 1},
        "condition": "device.power != 'on'",
        "delay_after_ms": 3000
      },
      {
        "device": "appletv_living",
        "command": "power_on",
        "params": {},
        "condition": "device.power != 'on'",
        "delay_after_ms": 1000
      },
      {
        "device": "mf_amplifier",
        "command": "power",
        "params": {},
        "condition": "device.power != 'on'",
        "delay_after_ms": 1000
      },
      {
        "device": "processor",
        "command": "power_on",
        "params": {"zone": 2},
        "condition": "device.zone2_power != True",
        "delay_after_ms": 3000
      },
      {
        "device": "living_room_tv",
        "command": "set_input_source",
        "params": {"input_source": "hdmi2"},
        "condition": "device.input_source != 'hdmi2'",
        "delay_after_ms": 1000
      },
      {
        "device": "processor",
        "command": "set_input",
        "params": {"input": "hdmi2"},
        "condition": "device.input != 'hdmi2'",
        "delay_after_ms": 1000
      },
      {
        "device": "mf_amplifier",
        "command": "input_aux2",
        "params": {},
        "delay_after_ms": 1000
      }
    ],
    "shutdown_sequence": [
      {
        "device": "appletv_living",
        "command": "power_off",
        "params": {},
        "condition": "device.power == 'on'",
        "delay_after_ms": 1000
      },
      {
        "device": "living_room_tv",
        "command": "power_off",
        "params": {},
        "condition": "device.power == 'on'",
        "delay_after_ms": 1000
      },
      {
        "device": "processor",
        "command": "power_off",
        "params": {},
        "condition": "device.power == 'on'"
      },
      {
        "device": "mf_amplifier",
        "command": "power",
        "params": {},
        "condition": "device.power == 'on'"
      }
    ],
    "manual_instructions": {
