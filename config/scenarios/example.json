{
  "scenario_id": "example_scenario",
  "name": "Example Scenario",
  "description": "A reference example showing best practices for scenario configuration",
  "room_id": "example_room",
  "roles": {
    "display": "screen_device",
    "audio": "audio_device",
    "lighting": "light_device"
  },
  "devices": [
    "screen_device",
    "audio_device",
    "light_device"
  ],
  "startup_sequence": [
    {
      "device": "light_device",
      "command": "set_scene",
      "params": {"scene": "movie"},
      "condition": "device.scene != 'movie'",
      "delay_after_ms": 500
    },
    {
      "device": "audio_device",
      "command": "power_on",
      "params": {},
      "condition": "device.power != True",
      "delay_after_ms": 2000
    },
    {
      "device": "audio_device",
      "command": "set_volume",
      "params": {"level": 30},
      "condition": "device.volume != 30",
      "delay_after_ms": 500
    },
    {
      "device": "screen_device",
      "command": "power_on",
      "params": {},
      "condition": "device.power != True",
      "delay_after_ms": 3000
    },
    {
      "device": "screen_device",
      "command": "set_input",
      "params": {"input": "hdmi1"},
      "condition": "device.input != 'hdmi1'"
    }
  ],
  "shutdown_sequence": [
    {
      "device": "screen_device",
      "command": "power_off",
      "params": {},
      "condition": "device.power == True",
      "delay_after_ms": 1000
    },
    {
      "device": "audio_device",
      "command": "power_off",
      "params": {},
      "condition": "device.power == True",
      "delay_after_ms": 1000
    },
    {
      "device": "light_device",
      "command": "set_scene",
      "params": {"scene": "bright"},
      "condition": "device.scene != 'bright'"
    }
  ],
  "manual_instructions": {
    "startup": [
