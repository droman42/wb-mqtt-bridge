{
    "scenario_id": "movie_vhs",
    "name": "Watch movies on VHS",
    "description": "Setup for watching movies with optimal audio and video settings",
    "room_id": "living_room",
    "roles": {
      "volume": "mf_amplifier",
      "playback": "vhs_player",
      "menu": "upscaler",
      "screen": "upscaler",
      "inputs": "processor"
    },
    "devices": [
      "living_room_tv",
      "processor",
      "vhs_player",
      "upscaler",
      "mf_amplifier"
    ],
    "startup_sequence": [
      {
        "device": "living_room_tv",
        "command": "power_on",
        "params": {},
        "condition": "device.power != True",
        "delay_after_ms": 5000
      },
      {
        "device": "processor",
        "command": "power_on",
        "params": {"zone": 1},
        "condition": "device.power != True",
        "delay_after_ms": 3000
      },
      {
        "device": "vhs_player",
        "command": "power_on",
        "params": {},
        "condition": "device.power != True",
        "delay_after_ms": 1000
      },
      {
        "device": "upscaler",
        "command": "power_on",
        "params": {},
        "condition": "device.power != True",
        "delay_after_ms": 1000
      },
      {
        "device": "mf_amplifier",
        "command": "power_on",
        "params": {},
        "condition": "device.power != True",
        "delay_after_ms": 1000
      },
      {
        "device": "processor",
        "command": "power_on",
        "params": {"zone": 2},
        "condition": "device.zone2_power != True",
        "delay_after_ms": 3000
      },
      {
        "device": "living_room_tv",
        "command": "set_input_source",
        "params": {"input_source": "hdmi2"},
        "condition": "device.input_source != 'hdmi2'",
        "delay_after_ms": 1000
      },
      {
        "device": "processor",
        "command": "set_input",
        "params": {"input": "hdmi3"},
        "condition": "device.input != 'hdmi3'",
        "delay_after_ms": 1000
      },
      {
        "device": "upscaler",
        "command": "input_s_vhs",
        "params": {},
        "condition": "device.input != 's_vhs'",
        "delay_after_ms": 1000
      },
      {
        "device": "mf_amplifier",
        "command": "input_cd",
        "params": {},
        "condition": "device.input != 'aux2'",
        "delay_after_ms": 1000
      }
    ],
    "shutdown_sequence": [
      {
        "device": "vhs_player",
        "command": "power_off",
        "params": {},
        "condition": "device.power == 'on'"
      },
      {
        "device": "upscaler",
        "command": "power_off",
        "params": {},
        "condition": "device.power == 'on'"
      },
      {
        "device": "living_room_tv",
        "command": "power_off",
        "params": {},
        "condition": "device.power == True"
      },
      {
        "device": "processor",
        "command": "power_off",
        "params": {},
        "condition": "device.power == True"
      },
      {
        "device": "mf_amplifier",
        "command": "power_off",
        "params": {},
        "condition": "device.power == True"
      }
    ],
    "manual_instructions": {
      "startup": [
