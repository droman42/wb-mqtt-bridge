{
  "scenario_id": "movie_ld",
  "name": "Watch movies on LD",
  "description": "Setup for watching movies with optimal audio and video settings",
  "room_id": "living_room",
  "roles": {
    "volume": "mf_amplifier",
    "playback": "ld_player",
    "tracks": "ld_player",
    "menu": "upscaler",
    "screen": "upscaler",
    "inputs": "processor"
  },
  "devices": [
    "living_room_tv",
    "processor",
    "ld_player",
    "upscaler",
    "mf_amplifier"
  ],
  "startup_sequence": [
    {
      "device": "living_room_tv",
      "command": "power_on",
      "params": {},
      "condition": "device.power != 'on'",
      "delay_after_ms": 5000
    },
    {
      "device": "processor",
      "command": "power_on",
      "params": {"zone": 1},
      "condition": "device.power != 'on'",
      "delay_after_ms": 3000
    },
    {
      "device": "ld_player",
      "command": "power",
      "params": {},
      "condition": "device.power != 'on'",
      "delay_after_ms": 1000
    },
    {
      "device": "upscaler",
      "command": "power_on",
      "params": {},
      "condition": "device.power != 'on'",
      "delay_after_ms": 1000
    },
    {
      "device": "mf_amplifier",
      "command": "power",
      "params": {},
      "condition": "device.power != 'on'",
      "delay_after_ms": 1000
    },
    {
      "device": "processor",
      "command": "power_on",
      "params": {"zone": 2},
      "condition": "device.zone2_power != True",
      "delay_after_ms": 3000
    },
    {
      "device": "living_room_tv",
      "command": "set_input_source",
      "params": {"input_source": "hdmi2"},
      "condition": "device.input_source != 'hdmi2'",
      "delay_after_ms": 1000
    },
    {
      "device": "processor",
      "command": "set_input",
      "params": {"input": "hdmi3"},
      "condition": "device.input_source != 'hdmi3'",
      "delay_after_ms": 1000
    },
    {
      "device": "upscaler",
      "command": "input_video",
      "params": {},
      "delay_after_ms": 1000
    },
    {
      "device": "mf_amplifier",
      "command": "input_cd",
      "params": {},
      "delay_after_ms": 1000
    }
  ],
  "shutdown_sequence": [
    {
      "device": "ld_player",
      "command": "power",
      "params": {},
      "condition": "device.power == 'on'"
    },
    {
      "device": "upscaler",
      "command": "power_off",
      "params": {},
      "condition": "device.power == 'on'"
    },
    {
      "device": "living_room_tv",
      "command": "power_off",
      "params": {},
      "condition": "device.power == 'on'"
    },
    {
      "device": "processor",
      "command": "power_off",
      "params": {},
      "condition": "device.power == 'on'"
    },
    {
      "device": "mf_amplifier",
      "command": "power",
      "params": {},
      "condition": "device.power == 'on'"
    }
  ],
  "manual_instructions": {
    "startup": [
      "ðŸ’¡ Dim the living room lights if needed",
      "ðŸŽ¬ Turn Dodocus device to LD position, ensure AMP mode is selected"
    ],
    "shutdown": [
      "ðŸ’¡ Don't forget to turn the lights back on"
    ]
  }
} 