{
  "scenario_id": "movie_zappiti",
  "name": "Watch movies on Zappiti",
  "description": "Setup for watching movies with optimal audio and video settings",
  "room_id": "living_room",
  "roles": {
    "volume": "mf_amplifier",
    "playback": "video",
    "tracks": "video",
    "menu": "video",
    "inputs": "processor"
  },
  "devices": [
    "living_room_tv",
    "processor",
    "video",
    "mf_amplifier"
  ],
  "startup_sequence": [
    {
      "device": "living_room_tv",
      "command": "power_on",
      "params": {},
      "condition": "device.power != 'on'",
      "delay_after_ms": 5000
    },
    {
      "device": "processor",
      "command": "power_on",
      "params": {"zone": 1},
      "condition": "device.power != 'on'",
      "delay_after_ms": 3000
    },
    {
      "device": "video",
      "command": "power_on",
      "params": {},
      "condition": "device.power != 'on'",
      "delay_after_ms": 1000
    },
    {
      "device": "mf_amplifier",
      "command": "power",
      "params": {},
      "condition": "device.power != 'on'",
      "delay_after_ms": 1000
    },
    {
      "device": "processor",
      "command": "power_on",
      "params": {"zone": 2},
      "condition": "device.zone2_power != True",
      "delay_after_ms": 3000
    },
    {
      "device": "living_room_tv",
      "command": "set_input_source",
      "params": {"input_source": "hdmi2"},
      "condition": "device.input_source != 'hdmi2'",
      "delay_after_ms": 1000
    },
    {
      "device": "processor",
      "command": "set_input",
      "params": {"input": "hdmi1"},
      "condition": "device.input != 'hdmi1'",
      "delay_after_ms": 1000
    },
    {
      "device": "mf_amplifier",
      "command": "input_aux2",
      "params": {},
      "delay_after_ms": 1000
    }
  ],
  "shutdown_sequence": [
    {
      "device": "video",
      "command": "power_off",
      "params": {},
      "condition": "device.power == 'on'",
      "delay_after_ms": 1000
    },
    {
      "device": "living_room_tv",
      "command": "power_off",
      "params": {},
      "condition": "device.power == 'on'",
      "delay_after_ms": 1000
    },
    {
      "device": "processor",
      "command": "power_off",
      "params": {},
      "condition": "device.power == 'on'"
    },
    {
      "device": "mf_amplifier",
      "command": "power",
      "params": {},
      "condition": "device.power == 'on'"
    }
  ],
  "manual_instructions": {
    "startup": [
      "ðŸ’¡ Dim the living room lights if needed",
      "ðŸŽ¬ Make sure the projector screen is down"
    ],
    "shutdown": [
      "ðŸ’¡ Don't forget to turn the lights back on",
      "ðŸŽ¬ Raise the projector screen if you're done watching"
    ]
  }
} 